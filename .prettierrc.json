{
  "trailingComma": "all",
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "bracketSpacing": true,
  "printWidth": 120,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.{ts,tsx,js}",
      "options": {
        "jsxBracketSameLine": false,
        "singleQuote": true,
        "parser": "typescript"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "singleQuote": false,
        "parser": "scss"
      }
    }
  ]
}